local CoreGui = game:GetService("CoreGui")

-- Tạo GUI chính
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FinderUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = CoreGui

-- Nút mở Finder Panel
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 100, 0, 30)
toggleButton.Position = UDim2.new(0, 10, 0, 10)
toggleButton.BackgroundColor3 = Color3.new(0, 0, 0)
toggleButton.Text = "Finder"
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.Font = Enum.Font.GothamBold
toggleButton.TextSize = 14
toggleButton.Parent = screenGui

-- Panel chính
local panel = Instance.new("Frame")
panel.Size = UDim2.new(0, 300, 0, 230)
panel.Position = UDim2.new(0, 10, 0, 50)
panel.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
panel.Visible = false
panel.Parent = screenGui

-- Label hop sever
local hopLabel = Instance.new("TextLabel")
hopLabel.Text = "Hop Sever"
hopLabel.Size = UDim2.new(0, 200, 0, 20)
hopLabel.Position = UDim2.new(0, 10, 0, 10)
hopLabel.BackgroundTransparency = 1
hopLabel.TextColor3 = Color3.new(1, 1, 1)
hopLabel.Font = Enum.Font.Gotham
hopLabel.TextSize = 14
hopLabel.Parent = panel

-- TextBox hop sever
local hopBox = Instance.new("TextBox")
hopBox.Size = UDim2.new(0, 200, 0, 30)
hopBox.Position = UDim2.new(0, 10, 0, 35)
hopBox.PlaceholderText = "Nhập server ID"
hopBox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
hopBox.TextColor3 = Color3.new(1, 1, 1)
hopBox.ClearTextOnFocus = false
hopBox.Font = Enum.Font.Gotham
hopBox.TextSize = 14
hopBox.Parent = panel

-- Nút tìm hop sever
local hopButton = Instance.new("TextButton")
hopButton.Text = "Tìm Server"
hopButton.Size = UDim2.new(0, 200, 0, 30)
hopButton.Position = UDim2.new(0, 10, 0, 75)
hopButton.BackgroundColor3 = Color3.fromRGB(100, 200, 255)
hopButton.TextColor3 = Color3.new(0, 0, 0)
hopButton.Font = Enum.Font.GothamBold
hopButton.TextSize = 14
hopButton.Parent = panel

-- Label Finder Pet
local petLabel = Instance.new("TextLabel")
petLabel.Text = "Finder Pet"
petLabel.Size = UDim2.new(0, 200, 0, 20)
petLabel.Position = UDim2.new(0, 10, 0, 115)
petLabel.BackgroundTransparency = 1
petLabel.TextColor3 = Color3.new(1, 1, 1)
petLabel.Font = Enum.Font.Gotham
petLabel.TextSize = 14
petLabel.Parent = panel

-- TextBox finder pet
local petBox = Instance.new("TextBox")
petBox.Size = UDim2.new(0, 200, 0, 30)
petBox.Position = UDim2.new(0, 10, 0, 140)
petBox.PlaceholderText = "Nhập tên pet"
petBox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
petBox.TextColor3 = Color3.new(1, 1, 1)
petBox.ClearTextOnFocus = false
petBox.Font = Enum.Font.Gotham
petBox.TextSize = 14
petBox.Parent = panel

-- Nút tìm kiếm finder pet
local petButton = Instance.new("TextButton")
petButton.Text = "Tìm kiếm Pet"
petButton.Size = UDim2.new(0, 200, 0, 30)
petButton.Position = UDim2.new(0, 10, 0, 180)
petButton.BackgroundColor3 = Color3.fromRGB(255, 200, 0)
petButton.TextColor3 = Color3.new(0, 0, 0)
petButton.Font = Enum.Font.GothamBold
petButton.TextSize = 14
petButton.Parent = panel

-- Kết quả tạm thời
local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(0, 260, 0, 20)
statusLabel.Position = UDim2.new(0, 10, 0, 215)
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.new(1, 1, 1)
statusLabel.Font = Enum.Font.Gotham
statusLabel.TextSize = 14
statusLabel.Text = ""
statusLabel.Parent = panel

-- Logic mở/đóng panel
toggleButton.MouseButton1Click:Connect(function()
	panel.Visible = not panel.Visible
end)

-- Logic nút tìm hop sever
hopButton.MouseButton1Click:Connect(function()
	statusLabel.Text = "Đang tìm server..."
	-- Thêm hành động thực tế ở đây nếu có
	wait(2)
	statusLabel.Text = "Tìm server hoàn tất."
end)

-- Logic nút tìm kiếm pet
petButton.MouseButton1Click:Connect(function()
	statusLabel.Text = "Tiến hành tìm kiếm..."
	-- Thêm hành động thực tế ở đây nếu có
	wait(2)
	statusLabel.Text = "Tìm kiếm pet hoàn tất."
end)
